version: "3"

networks:
  web:
    external: false

services:
  crawl:
    image: frozenfoxx/crawl:latest
    container_name: "crawl_webtiles"
    restart: always
    expose:
      - '8080'
    labels:
      - 'traefik.enable=true'
      - 'traefik.http.routers.crawl.rule=Host(`${DOMAIN}`)'
      - 'traefik.http.routers.crawl.tls=true'
      - 'traefik.http.routers.crawl.tls.certresolver=lets-encrypt'
    volumes:
      - /data/crawl:/data
    networks:
      - web

  traefik:
    image: traefik:latest
    container_name: "traefik"
    restart: always
    ports:
      - '80:80'
      - '443:443'
    volumes:
      - /data/traefik:/etc/traefik
      - /var/run/docker.sock:/var/run/docker.sock:ro
    networks:
      - web
